@{
    ViewBag.Title = "EnterNewPwdResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 0 150px;width:500px;">
    <div class="title pink-text" style="margin-bottom:20px;">
		    <span>ผลการดำเนินการ</span>
    </div>
    <div  style="margin-bottom:40px;">
         <p>ระบบดำเนินการบันทึกรหัสผ่านใหม่ของท่านเรียบร้อยแล้ว</p>
    </div>
   
    
    <div>
        @using (Html.BeginForm("ValidateUser", "Users", FormMethod.Post, new { @id = "webfront-login-form", @class = "form-horizontal" }))
			{ 
				<div class="control-group">
					<label class="control-label" for="UserName">ชื่อผู้ใช้</label>
					<div class="controls">
						@Html.Editor("UserName")
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="UserName">รหัสผ่าน</label>
					<div class="controls">
						@Html.Password("Password")	
					</div>
				</div>
                <div class="control-group">
					<div class="controls">
                        <input type="submit" value="ลงชื่อเข้าใช้" class ="btn btn-primary btn-blue", id = "webfront-login-link" />						
					</div>
				</div>	
			}
    </div>
</div>
