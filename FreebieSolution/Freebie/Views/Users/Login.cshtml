@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

	
	<div id="login-form" class ="shadow-border @(string.IsNullOrEmpty(ViewBag.LoginError) ? "" : "error")">
		<div class="login-header">
            <div style="float:right; line-height:60px;">
                 <span style="color:#999; font-size: 24px;">ยินดีต้อนรับสู่บริการโทรฟรี</span>
            </div>
            <div style="float:left;">
                <a href="http://www.freebie.co.th" target="_blank"> <img src="@Url.Content("~/Images/u0_normal.png")" width = "150" height = "50" /> </a>
            </div>
        </div>
		<div class="clear"></div>
        @if (!string.IsNullOrEmpty(ViewBag.LoginError))
        {
                <div class="login-alert" style="text-align:center;">
					   <p>@ViewBag.LoginError</p>      
                </div>
        }
		 @using (Html.BeginForm("ValidateUser", "Users", FormMethod.Post, new { @id = "webfront-login-form", @class = "" }))
			{ 
				<div class="control-group">
					<label class="control-label" for="UserName">
                        @Html.ActionLink("ลืมอีเมล์", "ForgotUsername", "Users", null, new { @class = "login-action-link" })
                        อีเมล์
                    </label>
					<div class="controls">
						@Html.Editor("UserName")
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="Password">
                        @Html.ActionLink("ลืมรหัสผ่าน", "ForgotPassword", "Users", null, new { @class = "login-action-link", @id ="forgot-pwd-link" })
                        รหัสผ่าน
                    </label>
					<div class="controls">
						@Html.Password("Password")	
					</div>
				</div>
                <div class="control-group">
					<div class="controls">
                        <input type="submit" value="เข้าสู่ระบบ" class ="btn btn-primary btn-blue", style="width:100px;" id = "webfront-login-link" />						
						@Html.ActionLink("ลงทะเบียนสมาชิกใหม่", "RegisterByCust", "Users", null, new { @style = "margin-left:10px; color: #ec008b; font-size:14px;", @id = "webfront-register-link" })
					    @Html.ActionLink("สร้างบัญชีรับสิทธิ์โทรฟรีเพิ่ม", "RegisterByCust", "Users", null, new { @style = "margin-left:45px; color: #ec008b; font-size:14px;", @id = "webfront-register-link" })
                    </div>
				</div>
			}
            <div class="ais-member-note">
               <span><img class ="ais-logo" src = "@Url.Content("~/Images/ais_customers_only.png")"/></span>
                <span class="register-existing-note">(สำหรับผู้ที่ลงทะเบียนผ่านช่องทางอื่นแล้ว)</span>
            </div>

	</div>
	
	<script type="text/javascript">
	    $(document).ready(function () {

	        var $forgot_pwd_link = $('#forgot-pwd-link');
	        $forgot_pwd_link.attr("tabindex", -1);
	        $('#webfront-login-link').on('click', function (e) {
	            $('#webfront-login-form').submit();
	            return false;
	        });


	    });
	</script>

