@using Freebie.Libs;

@model Freebie.Models.User
@{
    ViewBag.Title = "UpdateSupervisorAcct";
    ViewBag.PageName = "จัดการบัญชีพนักงานระดับหัวหน้า";
    Layout = "~/Areas/Backend/Views/Shared/_Backend.cshtml";

    bool has_permission = Permission.has_permission(Permission.sup_acct_page_id); 
}
<div class="backend-table-title">
	<span>ข้อมูลบัญชีพนักงาน</span>   
</div>
@if (has_permission)
{
<div style="margin: 20px 20px 0 20px;">
    @using (Html.BeginForm("UpdateSupervisorAcct", "User", FormMethod.Post, new { @id = "webfront-register-form", @class = "form-horizontal", style = "width:100%;" }))
    {
         if (!Html.ViewData.ModelState.IsValid)
      {
                <div class="alert alert-error" style="width:620px;">
					    @Html.ValidationSummary()           
                </div>
      }
        @Html.Hidden("User_Id")
        <div class="control-group">
		    <label class="control-label" for="First_Name" style="text-align:left;">
			    ชื่อผู้ใช้:
		    </label>
		    <div class="controls">
			    @Model.User_No      
		    </div>         
	     </div>
        <div class="control-group">
		    <label class="control-label" for="First_Name" style="text-align:left;">
			    รหัสผ่าน:
		    </label>
		    <div class="controls">
			    @if (string.IsNullOrEmpty(ViewBag.PlainPwd))
       { 
                       @Html.Raw("******")
       }
       else
       { 
                       @ViewBag.PlainPwd
                       @Html.Hidden("PlainPwd")
       }
           
                @Html.ActionLink("สร้างรหัสผ่าน", "GeneratePassword", "User", new { user_id = Model.User_Id }, new { style = "margin-left:20px;" })
		    </div>    
	    </div>
        <div class="control-group">
		    <label class="control-label" for="First_Name" style="text-align:left;">
			    ชื่อ:
		    </label>
		    <div class="controls">
			   @Html.EditorFor(model => model.First_Name)
		    </div>
            @Html.ValidationMessageFor(model => model.First_Name)         
	    </div>
        <div class="control-group">
		    <label class="control-label" for="First_Name" style="text-align:left;">
			    นามสกุล:
		    </label>
		    <div class="controls">
			    @Html.EditorFor(model => model.Last_Name)
		    </div>
            @Html.ValidationMessageFor(model => model.Last_Name)        
	    </div>
        <div class="control-group">
		    <label class="control-label" for="First_Name" style="text-align:left;">
			    สังกัด:
		    </label>
		    <div class="controls">
			    @Html.DropDownList("Dept_Cd")
		    </div>         
	    </div>
        <div class="control-group">
		    <label class="control-label" for="First_Name" style="text-align:left;">
			    กลุ่มที่:
		    </label>
		    <div class="controls">
			    @Html.DropDownList("Group_Id")
		    </div>         
	    </div>
         <div class="control-group">
		    <label class="control-label" for="First_Name" style="text-align:left;">
			    สถานะ:
		    </label>
		    <div class="controls">
			    @Html.DropDownList("Status_Cd")
		    </div>         
	    </div>
        <div style="margin-top:20px;text-align:center;width:80%;">
				<input type="submit" id="register-profile-submit" value="บันทึก" class="btn btn-primary btn-blue"/>
                @Html.ActionLink("ยกเลิก", "ViewSupervisorAcct", "User", new { user_id = Model.User_Id },
                    new
                    {
                        @class = "btn btn-primary btn-blue"
                    })
        </div>
    }
</div>
}
else
{ 
    @Html.Partial("~/Views/Statics/PermissionDenied.cshtml")
}